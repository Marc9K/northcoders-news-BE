{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": [
      {
        "key": "sort_by",
        "value": "any valid column",
        "default": "created_at"
      },
      {
        "key": "order",
        "value": "asc or desc for ascending or descending",
        "default": "desc"
      },
      {
        "key": "topic",
        "value": "topic to filter articles by",
        "default": null
      }
    ],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article with article_id if exists",
    "exampleResponse": {
      "article": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "comment_count": 6
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "increment article with article_id votes if exists",
    "exampleRequest": {
      "inc_votes": -10
    },
    "exampleResponse": {
      "article": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": -10,
        "comment_count": 6
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves comments for the article with article_id",
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "body": "Wow",
          "article_id": 1,
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a comment for the article with article_id",
    "exampleRequest": {
      "username": "username",
      "body": "Wow"
    },

    "exampleResponse": {
      "comments": {
        "comment_id": 1,
        "body": "Wow",
        "article_id": 1,
        "author": "weegembump",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0
      }
    }
  },
  "DELETE /api/comments/comment_id": {
    "description": "deletes a comment with comment_id"
  },
  "GET /api/users": {
    "description": "serves all the users",
    "exampleResponse": {
      "users": [
        {
          "username": "leopal",
          "name": "Leo",
          "avatar_url": "online.com/image.png"
        }
      ]
    }
  },
  "GET /api/users/:username": {
    "description": "serves all the users",
    "exampleResponse": {
      "user": {
        "username": "leopal",
        "name": "Leo",
        "avatar_url": "online.com/image.png"
      }
    }
  }
}
